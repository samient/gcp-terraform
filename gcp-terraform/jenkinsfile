pipeline {
  agent any

  environment {
    GIT_CREDENTIALS = credentials('github-creds')
  }

  stages {
    stage('Checkout') {
      steps {
        git credentialsId: "${GIT_CREDENTIALS}", url: 'https://github.com/samient/gcp-terraform.git', branch: 'main'
      }
    }

    stage('Terraform Init') {
      steps {
        dir('gcp-terraform') {
          withEnv(["GOOGLE_APPLICATION_CREDENTIALS=${GOOGLE_CREDENTIALS}"]) {
            sh 'terraform init'
          }
        }
      }
    }

    stage('Terraform Plan') {
      steps {
        dir('gcp-terraform') {
          withEnv(["GOOGLE_APPLICATION_CREDENTIALS=${GOOGLE_CREDENTIALS}"]) {
            sh 'terraform plan -var-file=terraform.tfvars'
          }
        }
      }
    }

    stage('Terraform Apply') {
      steps {
        dir('gcp-terraform') {
          withEnv(["GOOGLE_APPLICATION_CREDENTIALS=${GOOGLE_CREDENTIALS}"]) {
            sh 'terraform apply -auto-approve -var-file=terraform.tfvars'
          }
        }
      }
    }
  }

  post {
    always {
      echo 'Pipeline Finished'
    }
  }
}
